{
    "name": "mezzio/mezzio-twigrenderer",
    "description": "Twig integration for Mezzio",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "http",
        "middleware",
        "psr",
        "psr-7",
        "twig"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio-twigrenderer/",
        "issues": "https://github.com/mezzio/mezzio-twigrenderer/issues",
        "source": "https://github.com/mezzio/mezzio-twigrenderer",
        "rss": "https://github.com/mezzio/mezzio-twigrenderer/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.5.x-dev",
            "dev-develop": "1.6.x-dev",
            "dev-release-2.0.0": "2.0.x-dev"
        },
        "laminas": {
            "config-provider": "Mezzio\\Twig\\ConfigProvider"
        }
    },
    "require": {
        "php": "^7.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "mezzio/mezzio-helpers": "^5.0.0alpha1 || ^5.0",
        "mezzio/mezzio-router": "^3.0.0alpha1 || ^3.0",
        "mezzio/mezzio-template": "^2.0.0alpha1 || ^2.0",
        "psr/container": "^1.0",
        "twig/twig": "^1.32 || ^2.1"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "malukenho/docheader": "^0.1.5",
        "phpunit/phpunit": "^7.0.2"
    },
    "conflict": {
        "container-interop/container-interop": "<1.2.0"
    },
    "suggest": {
        "aura/di": "^3.2 to make use of Aura.Di dependency injection container",
        "laminas/laminas-servicemanager": "^3.3 to use laminas-servicemanager for dependency injection",
        "mouf/pimple-interop": "^1.0 to use Pimple for dependency injection"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\Twig\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\Twig\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@license-check",
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "license-check": "docheader check src/ test/"
    },
    "replace": {
        "zendframework/zend-expressive-twigrenderer": "self.version"
    }
}
